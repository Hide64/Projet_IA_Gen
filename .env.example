# ----------------------------
# App
# ----------------------------
APP_NAME="MovieMoodReco"
ENVIRONMENT="dev"

# Paths (dans le container)
DATA_DIR="/app/data"
STORAGE_DIR="/app/storage"
SQLITE_PATH="/app/storage/app.db"
FAISS_DIR="/app/storage/faiss"

# ----------------------------
# Embeddings
# ----------------------------
# Modèle embeddings HF (local via sentence-transformers)
EMBED_MODEL_NAME="sentence-transformers/all-MiniLM-L6-v2"

# ----------------------------
# Reco logic (owned-first)
# ----------------------------
# Seuil “match évident” (à calibrer)
OWNED_THRESHOLD="0.75"
OWNED_MARGIN="0.05"
ALPHA_SIM="0.6"   # poids similarité requête-synopsis
BETA_TASTE="0.4"  # poids affinité profil utilisateur

# ----------------------------
# TMDb (fallback)
# ----------------------------
TMDB_API_KEY="CHANGEME"
TMDB_LANGUAGE="fr-FR"
TMDB_REGION="FR"
TMDB_CACHE_DIR="/app/data/tmdb_cache"

# ----------------------------
# LLM (optionnel au MVP)
# 0 = off (MVP peut s’en passer)
# 1 = on
# ----------------------------
LLM_ENABLED="0"

# Choix provider : hf | openai | gemini
LLM_PROVIDER="hf"

# HuggingFace Inference (si tu veux LLM distant gratuit/limité)
HF_TOKEN=""

# OpenAI (si tu actives le mode premium)
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4o-mini"

# Gemini (si tu actives le mode premium)
GEMINI_API_KEY=""
GEMINI_MODEL="gemini-1.5-flash"
